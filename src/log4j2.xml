<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="TRACE">
  <Appenders>
    <Console name="Console" target="SYSTEM_OUT">
      <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
  	<Logger name="apps.topanal.TopologyAnalysisGatherExecutor" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="apps.topanal.ResultDataAccess" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>    
    <Logger name="apps.topanal.TopologyAnalysis" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="apps.groupanal.GroupAnalysisGatherExecutor" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="apps.groupanal.ResultDataAccess" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Logger name="apps.groupanal.GroupAnalysis" level="trace" additivity="false">
      <AppenderRef ref="Console"/>
    </Logger>
    <Root level="error">
      <AppenderRef ref="log"/>
    </Root>
  </Loggers>
</Configuration>